{
  "layout": {
    "page_style": "single_column",
    "max_pages": 2,
    "comments": "Options: single_column, two_column, hybrid"
  },
  
  "sections": {
    "professional_summary": {
      "enabled": true,
      "order": 1,
      "keep_together": true,
      "layout": "full_width",
      "page_break_before": false,
      "page_break_after": false,
      "comments": "Layout options: full_width, half_width, one_third, two_thirds"
    },
    
    "technical_expertise": {
      "enabled": true,
      "order": 2,
      "keep_together": false,
      "layout": "full_width",
      "columns": 2,
      "page_break_before": false,
      "page_break_after": false,
      "comments": "Columns: 1-3 for skills grid"
    },
    
    "experience": {
      "enabled": true,
      "order": 3,
      "keep_together": false,
      "layout": "full_width",
      "page_break_before": false,
      "page_break_after": false,
      "max_items": null,
      "comments": "Set max_items to limit number of experiences shown"
    },
    
    "projects": {
      "enabled": true,
      "order": 4,
      "keep_together": false,
      "layout": "full_width",
      "page_break_before": false,
      "page_break_after": false,
      "max_items": null
    },
    
    "education": {
      "enabled": true,
      "order": 5,
      "keep_together": true,
      "layout": "full_width",
      "page_break_before": false,
      "page_break_after": false
    },
    
    "publications": {
      "enabled": true,
      "order": 6,
      "keep_together": true,
      "layout": "full_width",
      "page_break_before": false,
      "page_break_after": false
    },
    
    "work_samples": {
      "enabled": false,
      "order": 7,
      "keep_together": false,
      "layout": "full_width",
      "page_break_before": false,
      "page_break_after": false
    }
  },
  
  "section_rows": {
    "comments": "Group sections in the same row (side-by-side)",
    "enabled": false,
    "rows": [
      {
        "sections": ["education", "publications"],
        "widths": ["50%", "50%"],
        "comments": "Education and publications side by side"
      }
    ]
  },
  
  "header": {
    "style": "compact",
    "show_tagline": true,
    "contact_layout": "horizontal",
    "comments": "Style options: compact, expanded. Contact layout: horizontal, vertical, grid"
  },
  
  "typography": {
    "font_family": "Inter",
    "base_size": "9.5pt",
    "heading_sizes": {
      "name": "24pt",
      "section": "9pt",
      "subsection": "10pt"
    },
    "line_height": 1.45
  },
  
  "spacing": {
    "section_margin": "18px",
    "item_margin": "12px",
    "paragraph_margin": "6px"
  },
  
  "colors": {
    "primary": "#0f172a",
    "accent": "#0ea5e9",
    "title": "#b45309",
    "muted": "#64748b"
  },
  
  "advanced": {
    "show_source_ids": false,
    "include_page_numbers": false,
    "watermark": null,
    "ats_optimization": true,
    "comments": "Advanced options for debugging and special requirements"
  },
  
  "_schema_version": "2.0",
  "_notes": {
    "description": "Comprehensive PDF layout configuration",
    "usage": "Place this file as 'resume_layout_config.json' in job folder",
    "priority": "Settings here override defaults in generate-pdf.js",
    "keep_together": "Prevents page breaks within section (true) or allows breaks (false)",
    "layout_options": "full_width (100%), half_width (50%), one_third (33%), two_thirds (67%)",
    "section_rows": "Group multiple sections horizontally - useful for Education + Publications",
    "max_items": "Limit number of items shown (null = show all)",
    "page_breaks": "Force page breaks before or after specific sections"
  }
}
