{
  "version": "2.0",
  "metadata": {
    "template_name": "AI/ML Engineer - Standard",
    "description": "Optimized layout for AI/ML technical roles with 2-page target",
    "last_modified": "2025-10-25T00:00:00Z"
  },
  "page_settings": {
    "format": "Letter",
    "margins": {
      "top": "0.45in",
      "right": "0.5in",
      "bottom": "0.45in",
      "left": "0.5in"
    },
    "target_pages": 2
  },
  "typography": {
    "font_family": "Inter",
    "base_size": "9.5pt",
    "line_height": 1.45,
    "scale_factor": 1.0
  },
  "colors": {
    "primary": "#0f172a",
    "accent": "#0ea5e9",
    "title": "#b45309",
    "muted": "#64748b",
    "border": "#e2e8f0"
  },
  "spacing": {
    "section_margin_bottom": "16px",
    "subsection_margin_bottom": "10px",
    "paragraph_margin_bottom": "5px",
    "compact_mode": false
  },
  "header": {
    "style": "professional",
    "show_tagline": true,
    "tagline_position": "below",
    "enable_hyperlinks": true
  },
  "sections": {
    "professional_summary": {
      "enabled": true,
      "order": 1,
      "style": "paragraph",
      "visual_treatment": "accent_border",
      "max_length": 0
    },
    "technical_expertise": {
      "enabled": true,
      "order": 2,
      "layout": "columns",
      "columns": 2,
      "show_years": true,
      "show_proficiency": false,
      "center_align": false
    },
    "experience": {
      "enabled": true,
      "order": 3,
      "header_style": "company_first",
      "enable_highlighting": true,
      "max_highlights_per_bullet": 4,
      "show_company_logo": false
    },
    "projects": {
      "enabled": true,
      "order": 4,
      "structure": "challenge_approach_impact",
      "show_org_context": true,
      "org_context_position": "subtitle",
      "enable_highlighting": true
    },
    "education": {
      "enabled": true,
      "order": 5,
      "style": "detailed",
      "show_gpa": true
    },
    "publications": {
      "enabled": true,
      "order": 6,
      "enable_hyperlinks": true,
      "style": "full"
    },
    "work_samples": {
      "enabled": false,
      "order": 7
    }
  },
  "layout": {
    "rows": [
      {
        "type": "single",
        "sections": ["professional_summary"],
        "widths": ["100%"],
        "column_gap": "20px",
        "allow_page_break": false
      },
      {
        "type": "single",
        "sections": ["technical_expertise"],
        "widths": ["100%"],
        "column_gap": "20px",
        "allow_page_break": false
      },
      {
        "type": "single",
        "sections": ["experience"],
        "widths": ["100%"],
        "column_gap": "20px",
        "allow_page_break": true
      },
      {
        "type": "single",
        "sections": ["projects"],
        "widths": ["100%"],
        "column_gap": "20px",
        "allow_page_break": true
      },
      {
        "type": "side_by_side",
        "sections": ["education", "publications"],
        "widths": ["50%", "50%"],
        "column_gap": "20px",
        "allow_page_break": false
      }
    ],
    "auto_layout": false
  },
  "highlighting": {
    "enabled": true,
    "metrics": {
      "enabled": true,
      "style": "bold"
    },
    "technologies": {
      "enabled": true,
      "style": "accent_color",
      "max_per_bullet": 3
    }
  },
  "advanced": {
    "enable_orphan_control": true,
    "enable_smart_compression": false,
    "debug_mode": false
  }
}
