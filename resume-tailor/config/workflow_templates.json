  "template_selection_rules": {
    "rules": [
      {
        "condition": "role_type == 'executive' OR job_title contains ['CTO', 'CIO', 'VP']",
        "template": "executive"
      },
      {
        "condition": "role_type == 'director'",
        "template": "director"
      },
      {
        "condition": "role_type == 'senior_manager'",
        "template": "senior_manager"
      },
      {
        "condition": "role_type == 'engineering_manager'",
        "template": "engineering_manager"
      },
      {
        "condition": "job_title contains ['scientist', 'researcher', 'research']",
        "template": "research_scientist"
      },
      {
        "condition": "job_title contains ['designer', 'design', 'ux', 'ui']",
        "template": "product_designer"
      },
      {
        "condition": "role_type == 'technical_lead' AND job_title contains ['senior', 'staff', 'principal', 'architect']",
        "template": "senior_ic"
      },
      {
        "condition": "role_type == 'technical_lead'",
        "template": "technical_lead"
      },
      {
        "condition": "role_type == 'individual_contributor'",
        "template": "individual_contributor"
      }
    ],
    "default": "individual_contributor"
  },
  "customization_options": {
    "allow_section_override": true,
    "allow_agent_override": true,
    "allow_priority_adjustment": true,
    "allow_max_pages_override": true,
    "require_confirmation": true
  }
